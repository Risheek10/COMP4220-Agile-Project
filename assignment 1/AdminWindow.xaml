<Window x:Class="ywBookStoreGUI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ywBookStoreGUI"
        mc:Ignorable="d"
        Title="Admin Panel" Height="650" Width="1100"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50">
            <StackPanel Margin="20,15,20,15">
                <TextBlock Text="Admin Panel" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Manage users, inventory, and view analytics" FontSize="14" Foreground="#BDC3C7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="1" Margin="20">
            <!-- User Management Tab -->
            <TabItem Header="User Management" Padding="15,8">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Users List -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Active Users" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DataGrid Name="UsersDataGrid" Height="350" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="150"/>
                                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="200"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="Manager" Binding="{Binding Manager}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="View Details" Width="120" Height="35" Margin="0,0,5,0" 
                                    Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                            <Button Content="Disable User" Width="120" Height="35" Margin="5,0,0,0" 
                                    Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- User Actions Panel -->
                    <StackPanel Grid.Column="1" Margin="20,10,10,10">
                        <TextBlock Text="User Actions" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Search User:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="SearchUserTextBox" Height="35" Padding="10" Text="Enter username or email"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Filter by Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox Name="FilterUserStatusComboBox" Height="35" Padding="10">
                                <ComboBoxItem>All</ComboBoxItem>
                                <ComboBoxItem>Active</ComboBoxItem>
                                <ComboBoxItem>Inactive</ComboBoxItem>
                                <ComboBoxItem>Suspended</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <Button Content="Refresh List" Width="280" Height="40" 
                                Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>

                        <Separator Margin="0,0,0,20"/>

                        <TextBlock Text="Quick Actions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Create New User" Width="280" Height="35" Click="AddUser_Click"
                                Background="#3498DB" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Content="Edit User" Width="280" Height="35" Click="UpdateUser_Click"
                                Background="#F39C12" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Content="Delete User" Width="280" Height="35" Click="DeleteUser_Click"
                                Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Inventory Management Tab -->
            <TabItem Header="Inventory" Padding="15,8">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Books Inventory -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Book Inventory" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DataGrid Name="InventoryDataGrid" Height="350" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="100"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="250"/>
                                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="80"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Add Book" Width="120" Height="35" Margin="0,0,5,0" Click="AddBook_Click"
                                    Background="#27AE60" Foreground="White" FontWeight="Bold"/>
                            <Button Content="Edit Book" Width="120" Height="35" Margin="5,0,5,0" Click="UpdateBook_Click"
                                    Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                            <Button Content="Remove Book" Width="120" Height="35" Margin="5,0,0,0" Click="DeleteBook_Click"
                                    Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Inventory Actions -->
                    <StackPanel Grid.Column="1" Margin="20,10,10,10">
                        <TextBlock Text="Inventory Tools" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Search Books:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Name="SearchBookTextBox" Height="35" Padding="10" Text="Title, ISBN, or Author"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Stock Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox Name="FilterStockStatusComboBox" Height="35" Padding="10">
                                <ComboBoxItem>All</ComboBoxItem>
                                <ComboBoxItem>In Stock</ComboBoxItem>
                                <ComboBoxItem>Low Stock</ComboBoxItem>
                                <ComboBoxItem>Out of Stock</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <Button Content="Refresh Inventory" Width="280" Height="40" 
                                Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>

                        <Separator Margin="0,0,0,20"/>

                        <TextBlock Text="Advanced Options" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Bulk Upload" Width="280" Height="35" 
                                Background="#3498DB" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Content="Low Stock Alert" Width="280" Height="35" 
                                Background="#F39C12" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Content="Export Inventory" Width="280" Height="35" 
                                Background="#9B59B6" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Analytics Tab -->
            <TabItem Header="Analytics" Padding="15,8">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Statistics Cards -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,20">
                        <!-- Total Users Card -->
                        <Border Background="#3498DB" CornerRadius="8" Width="200" Height="120" Margin="0,0,10,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Total Users" Foreground="White" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Name="TotalUsersTextBlock" Text="1,234" Foreground="White" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Sales Card -->
                        <Border Background="#27AE60" CornerRadius="8" Width="200" Height="120" Margin="10,0,10,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Total Sales" Foreground="White" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Name="TotalSalesTextBlock" Text="$45,678" Foreground="White" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Orders Card -->
                        <Border Background="#E74C3C" CornerRadius="8" Width="200" Height="120" Margin="10,0,10,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Total Orders" Foreground="White" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Name="TotalOrdersTextBlock" Text="567" Foreground="White" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Books in Stock Card -->
                        <Border Background="#F39C12" CornerRadius="8" Width="200" Height="120" Margin="10,0,0,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Books in Stock" Foreground="White" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Name="BooksInStockTextBlock" Text="8,901" Foreground="White" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Charts Section -->
                    <TextBlock Grid.Row="1" Text="Performance Charts" FontSize="18" FontWeight="Bold" Margin="10,10,10,10"/>

                    <Grid Grid.Row="2" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales Trend Chart Placeholder -->
                        <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="8" Margin="0,0,10,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Sales Trend (Last 30 Days)" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Name="SalesTrendChartTextBlock" Text="[Chart Placeholder]" FontSize="12" TextAlignment="Center" Margin="0,20,0,0" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </Border>

                        <!-- Top Books Chart Placeholder -->
                        <Border Grid.Column="1" Background="#ECF0F1" CornerRadius="8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Top 10 Best Sellers" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Name="TopSellersChartTextBlock" Text="[Chart Placeholder]" FontSize="12" TextAlignment="Center" Margin="0,20,0,0" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- System Settings Tab -->
            <TabItem Header="Settings" Padding="15,8">
                <Grid Background="White">
                    <ScrollViewer>
                        <StackPanel Margin="20">
                            <TextBlock Text="System Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                            <!-- General Settings -->
                            <TextBlock Text="General Settings" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                                <StackPanel>
                                    <CheckBox Name="EnableUserRegistrationCheckBox" Content="Enable User Registration" Margin="0,0,0,10"/>
                                    <CheckBox Name="RequireEmailVerificationCheckBox" Content="Require Email Verification" Margin="0,0,0,10"/>
                                    <CheckBox Name="EnableMaintenanceModeCheckBox" Content="Enable Maintenance Mode" Margin="0,0,0,10"/>
                                    <CheckBox Name="SendDailyReportsCheckBox" Content="Send Daily Reports" Margin="0,0,0,10"/>
                                </StackPanel>
                            </Border>

                            <!-- Email Settings -->
                            <TextBlock Text="Email Configuration" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="SMTP Server:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox Name="SmtpServerTextBox" Height="30" Padding="10" Text="smtp.example.com"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="SMTP Port:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox Name="SmtpPortTextBox" Height="30" Padding="10" Text="587"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Admin Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBox Name="AdminEmailTextBox" Height="30" Padding="10" Text="admin@bookstore.com"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Database Settings -->
                            <TextBlock Text="Database" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                                <StackPanel>
                                    <Button Content="Backup Database" Width="150" Height="35" 
                                            Background="#27AE60" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                                    <Button Content="Restore Database" Width="150" Height="35" 
                                            Background="#3498DB" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                                    <Button Content="Clear Logs" Width="150" Height="35" 
                                            Background="#E74C3C" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <Button Content="Save Settings" Width="150" Height="40" 
                                    Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>