<Window x:Class="ywBookStoreGUI.BookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Details" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="ISBN:" Grid.Row="0" Grid.Column="0" />
        <TextBox Name="ISBNTextBox" Grid.Row="0" Grid.Column="1" />

        <Label Content="Category ID:" Grid.Row="1" Grid.Column="0" />
        <TextBox Name="CategoryIDTextBox" Grid.Row="1" Grid.Column="1" />

        <Label Content="Title:" Grid.Row="2" Grid.Column="0" />
        <TextBox Name="TitleTextBox" Grid.Row="2" Grid.Column="1" />

        <Label Content="Author:" Grid.Row="3" Grid.Column="0" />
        <TextBox Name="AuthorTextBox" Grid.Row="3" Grid.Column="1" />

        <Label Content="Price:" Grid.Row="4" Grid.Column="0" />
        <TextBox Name="PriceTextBox" GridRow="4" Grid.Column="1" />

        <Label Content="Year:" Grid.Row="5" Grid.Column="0" />
        <TextBox Name="YearTextBox" Grid.Row="5" Grid.Column="1" />

        <Label Content="Edition:" Grid.Row="6" Grid.Column="0" />
        <TextBox Name="EditionTextBox" Grid.Row="6" Grid.Column="1" />

        <Label Content="Publisher:" Grid.Row="7" Grid.Column="0" />
        <TextBox Name="PublisherTextBox" Grid.Row="7" Grid.Column="1" />

        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OK_Click" />
            <Button Content="Cancel" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>