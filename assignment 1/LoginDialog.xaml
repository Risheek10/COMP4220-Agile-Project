<Window x:Class="ywBookStoreGUI.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ywBookStoreGUI"
        mc:Ignorable="d"
        Title="Login" Height="130" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Margin="2">User Name:</Label>
        <Label  Grid.Column="0" Grid.Row="1" Margin="2">Password:</Label>
        <TextBox x:Name="nameTextBox" Grid.Column="1" Grid.Row="0" Margin="2"/>
        <PasswordBox x:Name="passwordTextBox" Grid.Column="1" Grid.Row="1" Margin="2"/>
        <StackPanel Grid.Column="1" Grid.RowSpan="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="okButton" Content="OK" Click="okButton_click" IsDefault="True" MinWidth="80" Margin="0,10,5,5"/>
            <Button Name="cancelButton" Click="cancelButton_click" IsCancel="True" MinWidth="80" Margin="40,10,5,5" Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
