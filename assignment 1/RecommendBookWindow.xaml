<Window x:Class="BookStoreGUI.RecommendBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecommendBookWindow" Height="400" Width="600"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="8">
            <TextBlock Text="Guess You Like" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListBox x:Name="guessYouLikeList" Height="120" Margin="0,0,0,12"/>
            <TextBlock Text="Most Popular" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListBox x:Name="popularBooksList" Height="120"/>
        </StackPanel>
    </Grid>
</Window>
