<Window x:Class="ywBookStoreGUI.ReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Details" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="ReviewID:" Grid.Row="0" Grid.Column="0" />
        <TextBox Name="ReviewIDTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" />

        <Label Content="Rating:" Grid.Row="1" Grid.Column="0" />
        <TextBox Name="RatingTextBox" Grid.Row="1" Grid.Column="1" />

        <Label Content="Review Text:" Grid.Row="2" Grid.Column="0" />
        <TextBox Name="ReviewTextTextBox" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" AcceptsReturn="True" />

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OK_Click" />
            <Button Content="Cancel" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>