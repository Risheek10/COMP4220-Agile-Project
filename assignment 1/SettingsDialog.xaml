<Window x:Class="ywBookstoreGUI.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Settings" Height="230" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="8"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Current Username:" VerticalAlignment="Center"/>
		<TextBlock x:Name="currentUsernameText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap"/>

		<Label Grid.Row="2" Grid.Column="0" Content="New Username:" VerticalAlignment="Center"/>
		<TextBox x:Name="newUsernameTextBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" />

		<Label Grid.Row="4" Grid.Column="0" Content="Current Password:" VerticalAlignment="Center"/>
		<PasswordBox x:Name="currentPasswordBox" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" />

		<Label Grid.Row="6" Grid.Column="0" Content="New Password:" VerticalAlignment="Center"/>
		<PasswordBox x:Name="newPasswordBox" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" />

		<StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button x:Name="saveButton" Content="Save" Width="75" Margin="0,0,8,0" Click="saveButton_Click"/>
			<Button Content="Cancel" Width="75" Click="cancelButton_Click"/>
		</StackPanel>
	</Grid>
</Window>