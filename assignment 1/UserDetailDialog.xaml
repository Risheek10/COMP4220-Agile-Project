<Window x:Class="ywBookStoreGUI.UserDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="UserID:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Name="UserIDTextBlock" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Username:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Name="UsernameTextBlock" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Password:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Name="PasswordTextBlock" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Type:" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Name="TypeTextBlock" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Label Content="Manager:" Grid.Row="4" Grid.Column="0" FontWeight="Bold"/>
        <CheckBox Name="ManagerCheckBox" Grid.Row="4" Grid.Column="1" IsEnabled="False" Margin="5"/>

        <Label Content="Full Name:" Grid.Row="5" Grid.Column="0" FontWeight="Bold"/>
        <TextBlock Name="FullNameTextBlock" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Close" Width="80" Height="30" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
