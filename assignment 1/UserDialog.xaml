<Window x:Class="ywBookStoreGUI.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="UserName:" Grid.Row="0" Grid.Column="0" />
        <TextBox Name="UserNameTextBox" Grid.Row="0" Grid.Column="1" />

        <Label Content="Password:" Grid.Row="1" Grid.Column="0" />
        <TextBox Name="PasswordTextBox" Grid.Row="1" Grid.Column="1" />

        <Label Content="Type:" Grid.Row="2" Grid.Column="0" />
        <TextBox Name="TypeTextBox" Grid.Row="2" Grid.Column="1" />

        <Label Content="Manager:" Grid.Row="3" Grid.Column="0" />
        <CheckBox Name="ManagerCheckBox" Grid.Row="3" Grid.Column="1" />

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OK_Click" />
            <Button Content="Cancel" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>