<Window x:Class="BookStoreGUI.WriteReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Write a Review" Height="350" Width="450">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Rating -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Rating (1–5):" VerticalAlignment="Center"/>
            <ComboBox x:Name="RatingBox" Width="60" Margin="10,0,0,0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
        </StackPanel>

        <!-- Review Text -->
        <TextBlock Text="Your Review:" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox x:Name="ReviewTextBox"
                 Grid.Row="2"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Submit Button -->
        <Button Content="Submit Review"
                Grid.Row="3"
                HorizontalAlignment="Right"
                Padding="8"
                Margin="0,20,0,0"
                Click="SubmitReview_Click"/>
    </Grid>
</Window>
