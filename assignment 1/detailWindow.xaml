<Window x:Class="ywBookstoreGUI.detailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ywBookstoreGUI"
        mc:Ignorable="d"
        Title="detailWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,2,2">
            <Label x:Name="titleLabel"  Content="Title" Margin=" 20 20 0 0" FontSize="24" />
            <Label x:Name="authorLabel" Content="Written By " Margin=" 20 10 0 0" FontSize="16"/>
            <Label x:Name="isbnLabel" Content="ISBN: " Margin=" 20 10 0 0" FontSize="14"/>
            <Label x:Name="publisherLabel" Content="Publisher:  " Margin=" 20 10 0 0" FontSize="14"/>
            <Label x:Name="yearLabel" Content="Published Year: " Margin=" 20 10 0 0" FontSize="14"/>
            <Label x:Name="editionLabel" Content="Edition: " Margin=" 20 10 0 0" FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <Label Width="17" x:Name="pricesignLabel" FontSize="14" Margin=" 20 10 0 0" Content="$"/>
                <Label x:Name="priceLabel" FontSize="14" Margin=" 5 10 0 0"/>

            </StackPanel>
            <Button x:Name="addButton" Content="Add to Cart" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Height="29" Width="97" Click="addButton_Click"/>
        </StackPanel>



    </Grid>
</Window>
