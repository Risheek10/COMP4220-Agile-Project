<Window x:Class="ywBookStoreGUI.recoverPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recover Password" Height="380" Width="440"
		ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
	<Grid Margin="12">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Enter your account username and email address. A verification code will be sent by email." TextWrapping="Wrap" Margin="0,-3,66,7"/>

		<StackPanel Grid.Row="2" VerticalAlignment="Top" x:Name="MainPanel">
			<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
				<Label Width="80" VerticalAlignment="Center">Username:</Label>
				<TextBox x:Name="UsernameTextBox" Width="280" VerticalContentAlignment="Center" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
				<Label Width="80" VerticalAlignment="Center">Email:</Label>
				<TextBox x:Name="EmailTextBox" Width="280" VerticalContentAlignment="Center"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="0,6,0,8">
				<Button x:Name="SendCodeButton" Width="140" Height="28" Content="Send Verification" Margin="0,0,8,0" />
				<Button x:Name="CancelButton" Width="80" Height="28" Content="Cancel" />
			</StackPanel>

			<StackPanel x:Name="VerificationPanel" Visibility="Visible" Margin="0,12,0,0">
				<TextBlock Text="Enter the verification code sent to your email, then choose a new password." TextWrapping="Wrap" Margin="0,0,0,8"/>
				<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
					<Label Width="90" VerticalAlignment="Center">Code:</Label>
					<TextBox x:Name="CodeTextBox" Width="120"  VerticalContentAlignment="center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
					<Label Width="90" VerticalAlignment="Center">New Password:</Label>
					<PasswordBox x:Name="NewPasswordBox" Width="200" VerticalContentAlignment="center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
					<Label Width="90" VerticalAlignment="Center">Confirm:</Label>
					<PasswordBox x:Name="ConfirmPasswordBox" Width="200" VerticalContentAlignment="center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,6,0,0">
					<Button x:Name="VerifyButton" Width="140" Height="28" Content="Verify and Reset" Margin="0,0,8,0"/>
					<Button x:Name="BackButton" Width="80" Height="28" Content="Back"/>
				</StackPanel>
			</StackPanel>
		</StackPanel>

		<TextBlock Grid.Row="3" x:Name="StatusText" Text="" Foreground="DarkRed" Margin="0,8,0,0"/>
	</Grid>
</Window>
