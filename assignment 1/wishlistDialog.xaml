<Window x:Class="ywBookstoreGUI.wishlistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ywBookstoreGUI"
        mc:Ignorable="d"
        Title="Wishlist" Height="250" Width="670">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="211*"/>
			<RowDefinition Height="73*"/>
		</Grid.RowDefinitions>
		<ListView x:Name="wishlistListView" MinHeight="100"
	  ItemsSource="{Binding}" SelectionMode="Single" Margin="39,15,39,12">
			<ListView.View>
				<GridView>
					<GridViewColumn Width="80" Header="ISBN"
				  DisplayMemberBinding="{Binding BookID}" />
					<GridViewColumn Width="285" Header="Title"
				  DisplayMemberBinding="{Binding BookTitle}" />
					<GridViewColumn Width="60" Header="Quantity"
				  DisplayMemberBinding="{Binding Quantity}" />
					<GridViewColumn Width="60" Header="Subtotal"
				  DisplayMemberBinding="{Binding SubTotal}" />
				</GridView>
			</ListView.View>
		</ListView>
		<Button Content="Remove from Wishlist" HorizontalAlignment="Left" Margin="39,5,0,0" VerticalAlignment="Top"
	  MinWidth="125" Height="25" Click="removeWishlistButton_Click" Grid.Row="1" Width="125" />
		<Button Content="Share Wishlist" Margin="0,5,39,0" VerticalAlignment="Top"
	  MinWidth="85" Height="25" Click="shareWishlistButton_Click" Grid.Row="1" HorizontalAlignment="Right" />

	</Grid>
</Window>
